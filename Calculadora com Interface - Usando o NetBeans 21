    private void IgualActionPerformed(java.awt.event.ActionEvent evt) {                                   
        // TODO add your handling code here:
        valor2 = Double.parseDouble (Tela.getText());
        if (operacao == "soma" ) {
            Tela.setText (String.valueOf (valor1 + valor2));
        } else if (operacao == "subtracao"){   
        Tela.setText (String.valueOf (valor1 - valor2)); 
        } else if (operacao == "multiplicacao"){
        Tela.setText (String.valueOf (valor1 * valor2));
        } else if  (operacao == "divisao") { 
        Tela.setText (String.valueOf (valor1 / valor2));

}
        }
    private void NZeroActionPerformed(java.awt.event.ActionEvent evt) {                                   
        // TODO add your handling code here:
        Tela.setText(Tela.getText()+ "0");
    }                                  
    
